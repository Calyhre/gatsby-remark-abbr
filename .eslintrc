{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
  ],

  "plugins": [
    "prettier"
  ],

  "env": {
    "node": true,
    "jest": true
  },

  "rules": {
    "prettier/prettier": ["error", {
      "printWidth": 100,
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": true,
      "jsxBracketSameLine": true,
      "parser": "flow"
    }],
  }
}
